<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Job Board</title>
</head>
<body>
    <h1>Job Listings</h1>
    <ul>
        <% jobs.forEach(job => { %>
            <li>
                <h2><%= job.title %></h2>
                <p><%= job.description %></p>
                <!-- Add other job details -->
                <form action="/apply" method="POST">
                    <input type="hidden" name="jobId" value="<%= job._id %>">
                    <button type="submit">Apply</button>
                </form>
            </li>
        <% }); %>
    </ul>
</body>
</html>
